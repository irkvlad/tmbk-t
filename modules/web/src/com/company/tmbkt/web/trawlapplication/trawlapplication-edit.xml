<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.company.tmbkt.web.trawlapplication.TrawlApplicationEdit"
        datasource="cardDs"
        messagesPack="com.company.tmbkt.web.trawlapplication">
    <dsContext>
        <datasource id="cardDs"
                    class="com.company.tmbkt.entity.TrawlApplication"
                    view="edit">
            <collectionDatasource id="cardProcDs"
                                  property="procs"/>
            <collectionDatasource id="cardRolesDs"
                                  property="roles"/>
            <collectionDatasource id="cardProjectsDs"
                                  property="projects"/>
            <datasource id="tehiksDs"
                        property="equipmentName"/>
            <datasource id="contactPersonShipmentDs"
                        property="contactPersonShipment"/>
            <datasource id="contactPersonUnloadingDs"
                        property="contactPersonUnloading"/>
        </datasource>
        <datasource id="docOfficeDataDs"
                    class="com.haulmont.thesis.core.entity.DocOfficeData"
                    view="edit">
            <collectionDatasource id="docOfficeDataAddresseesDs"
                                  property="docOfficeDataAddressees"/>
            <collectionDatasource id="docTransferLogsDs"
                                  property="docTransferLogs"/>
        </datasource>
        <hierarchicalDatasource id="attachmentsDs"
                                class="com.haulmont.workflow.core.entity.CardAttachment"
                                datasourceClass="com.haulmont.thesis.web.ui.common.attachments.ThesisAttachmentsDataSource"
                                hierarchyProperty="versionOf"
                                view="card-edit">
            <query>
                <![CDATA[select a from wf$CardAttachment a where a.card.id = :ds$cardDs order by a.createTs desc]]>
            </query>
        </hierarchicalDatasource>
        <collectionDatasource id="cardRelationsDs"
                              class="com.haulmont.workflow.core.entity.CardRelation"
                              view="card-relation">
            <query>
                <![CDATA[
                select c from wf$CardRelation c where (c.card.id = :ds$cardDs or c.relatedCard.id = :ds$cardDs)
                ]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="versionsDs"
                              class="com.company.tmbkt.entity.TrawlApplication"
                              view="_local">
            <query>
                <![CDATA[select d from tmbkt$TrawlApplication d where d.versionOf.id = :ds$cardDs order by d.createTs]]>
            </query>
        </collectionDatasource>
        <runtimePropsDatasource id="runtimePropsDs"
                                mainDs="cardDs"/>
        <collectionDatasource id="categoriesDs"
                              class="com.haulmont.cuba.core.entity.Category"
                              view="_local">
            <query>
                <![CDATA[select c from sys$Category c where c.entityType='tmbkt$TrawlApplication']]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="categoryDs"
                              class="com.haulmont.thesis.core.entity.DocCategory"
                              view="_local">
            <query>
                <![CDATA[select c from df$Category c where c.docType.id = :ds$cardDs.docKind.docType order by c.name]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="contractorsDs"
                              class="com.haulmont.thesis.core.entity.Contractor"
                              refreshMode="NEVER">
            <query>
                <![CDATA[select c from df$Contractor c order by c.name]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="departmentDs"
                              class="com.haulmont.thesis.core.entity.Department"
                              refreshMode="NEVER"
                              view="browse">
            <query>
                <![CDATA[select d from df$Department d where d.organization.id = :ds$organizationDs order by d.name]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="organizationDs"
                              class="com.haulmont.thesis.core.entity.Organization"
                              view="_local">
            <query>
                <![CDATA[select o from df$Organization o order by o.name]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="customersDs"
                              class="com.haulmont.thesis.core.entity.Contractor"
                              view="_minimal">
            <query>
                <![CDATA[select e from df$Contractor e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="shippersDs"
                              class="com.haulmont.thesis.core.entity.Company"
                              view="_minimal">
            <query>
                <![CDATA[select e from df$Company e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="consigneesDs"
                              class="com.haulmont.thesis.core.entity.Contractor"
                              view="_minimal">
            <query>
                <![CDATA[select e from df$Contractor e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="contactPersonShipmentsDs"
                              class="com.haulmont.thesis.core.entity.ContactPerson"
                              view="_local">
            <query>
                <![CDATA[select e from df$ContactPerson e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="contactPersonUnloadingsDs"
                              class="com.haulmont.thesis.core.entity.ContactPerson"
                              view="_local">
            <query>
                <![CDATA[select e from df$ContactPerson e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="thirdPartyCarrierNamesDs"
                              class="com.haulmont.thesis.core.entity.Contractor"
                              view="_minimal">
            <query>
                <![CDATA[select e from df$Contractor e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="split"
            spacing="true">
        <iframe id="templateFrame"
                screen="docTemplateFrame"/>
        <split id="split"
               orientation="vertical"
               pos="70"
               width="100%">
            <hbox id="mainPane"
                  expand="tabsheet"
                  height="100%"
                  width="100%">
                <tabSheet id="tabsheet"
                          height="100%"
                          width="90%">
                    <tab id="mainTab"
                         caption="msg://mainTab"
                         margin="true">
                        <scrollBox id="infoScrollBox"
                                   height="100%"
                                   margin="true"
                                   scrollBars="both">
                            <vbox id="infoVBox">
                                <groupBox id="docInfoGroupBox"
                                          stylename="edit-area"
                                          width="AUTO">
                                    <vbox id="docInfoVbox">
                                        <iframe id="header"
                                                screen="docHeaderFrame"
                                                stylename="thesis-star-left-margin"/>
                                        <vbox id="docInfo">
                                            <grid id="documentFields"
                                                  margin="true,false,false,false"
                                                  spacing="true"
                                                  width="100%">
                                                <columns>
                                                    <column flex="1.0"/>
                                                    <column flex="1.0"/>
                                                    <column flex="1.0"/>
                                                    <column flex="1.0"/>
                                                    <column flex="0.0"/>
                                                    <column flex="0.0"/>
                                                    <column flex="0.0"/>
                                                    <column flex="0.0"/>
                                                </columns>
                                                <rows>
                                                    <row>
                                                        <label id="docKindLabel"
                                                               value="msg://docKind"
                                                               visible="false"/>
                                                        <textField id="docKind"
                                                                   datasource="cardDs"
                                                                   editable="false"
                                                                   property="docKind"
                                                                   visible="false"
                                                                   width="200px"/>
                                                        <label id="categoryTALabel"
                                                               value="Категория"/>
                                                        <lookupField datasource="cardDs"
                                                                     property="categiryTrallApplication"/>
                                                        <label id="dateDispatchFactLabel"
                                                               value="Дата отправления (факт)"/>
                                                        <dateField id="dateDispatchFactDateField"
                                                                   datasource="cardDs"
                                                                   property="dateDispatchFact"/>
                                                    </row>
                                                    <row id="numberRow">
                                                        <label id="docNumberLabel"
                                                               value="msg://number"/>
                                                        <textField id="docNumber"
                                                                   datasource="cardDs"
                                                                   property="number"
                                                                   width="200px"/>
                                                        <label id="dateLabel"
                                                               value="msg://date"/>
                                                        <dateField id="date"
                                                                   datasource="cardDs"
                                                                   property="date"
                                                                   resolution="DAY"
                                                                   width="200px"/>
                                                        <label id="arrivalDateFactLabel"
                                                               value="Дата прибытия (факт)"/>
                                                        <dateField id="arrivalDateFactField"
                                                                   datasource="cardDs"
                                                                   property="arrivalDateFact"/>
                                                    </row>
                                                    <row id="themeRow">
                                                        <label id="themeLabel"
                                                               value="msg://theme"/>
                                                        <textField id="theme"
                                                                   colspan="3"
                                                                   datasource="cardDs"
                                                                   property="theme"
                                                                   width="539px"/>
                                                        <label id="transportationCostLabel"
                                                               value="Cтоимость транспортировки"/>
                                                        <textField id="transportationCostField"
                                                                   datasource="cardDs"
                                                                   property="transportationCost"/>
                                                    </row>
                                                    <row id="organizationRow">
                                                        <label id="organizationLabel"
                                                               value="msg://organization"/>
                                                        <lookupPickerField id="organization"
                                                                           datasource="cardDs"
                                                                           optionsDatasource="organizationDs"
                                                                           property="organization"
                                                                           width="200px">
                                                            <actions>
                                                                <action id="open"/>
                                                            </actions>
                                                        </lookupPickerField>
                                                        <label id="departmentLabel"
                                                               value="msg://department"/>
                                                        <lookupPickerField id="department"
                                                                           datasource="cardDs"
                                                                           optionsDatasource="departmentDs"
                                                                           property="department"
                                                                           width="200px"/>
                                                    </row>
                                                    <row id="contractorRow">
                                                        <label id="contractorLabel"
                                                               value="msg://contractor"/>
                                                        <lookupPickerField id="contractor"
                                                                           colspan="3"
                                                                           datasource="cardDs"
                                                                           optionsDatasource="contractorsDs"
                                                                           property="contractor"
                                                                           width="539px">
                                                            <actions>
                                                                <action id="lookup"/>
                                                            </actions>
                                                        </lookupPickerField>
                                                    </row>
                                                    <row id="cardRow">
                                                        <label id="parentCardLabel"
                                                               value="msg://parentCard"/>
                                                        <pickerField id="parentCard"
                                                                     datasource="cardDs"
                                                                     property="parentCard"
                                                                     width="200px">
                                                            <actions>
                                                                <action id="open"/>
                                                                <action id="clear"/>
                                                            </actions>
                                                        </pickerField>
                                                        <label id="docCategoryLabel"
                                                               value="msg://docCategory"/>
                                                        <lookupPickerField id="docCategory"
                                                                           datasource="cardDs"
                                                                           optionsDatasource="categoryDs"
                                                                           property="docCategory"
                                                                           width="200px">
                                                            <actions>
                                                                <action id="open"/>
                                                            </actions>
                                                        </lookupPickerField>
                                                    </row>
                                                    <row id="commentRow">
                                                        <label id="commentLabel"
                                                               value="msg://comment"
                                                               width="140px"/>
                                                        <textArea id="comment"
                                                                  colspan="3"
                                                                  datasource="cardDs"
                                                                  property="comment"
                                                                  resizable="true"
                                                                  width="512px"/>
                                                    </row>
                                                    <row>
                                                        <label value="Заказчик"/>
                                                        <lookupPickerField id="cardFieldCustmer"
                                                                           datasource="cardDs"
                                                                           optionsDatasource="contractorsDs"
                                                                           property="customer">
                                                            <actions>
                                                                <action id="lookup"/>
                                                            </actions>
                                                        </lookupPickerField>
                                                        <label value="Попутный груз"/>
                                                        <checkBox datasource="cardDs"
                                                                  property="passingCargo"/>
                                                    </row>
                                                    <row>
                                                        <label value="Желаема стоимость перевозки"/>
                                                        <textField datasource="cardDs"
                                                                   datatype="double"
                                                                   property="desiredTransportationCost"/>
                                                    </row>
                                                </rows>
                                            </grid>
                                        </vbox>
                                        <grid id="signatureInfo">
                                            <columns count="4"/>
                                            <rows>
                                                <row>
                                                    <label id="signatureLabel"
                                                           value="msg://docSignatureLab"
                                                           visible="false"/>
                                                    <button id="docSignature"
                                                            stylename="link"
                                                            visible="false"/>
                                                </row>
                                                <row id="globalRow">
                                                    <label id="globalLab"
                                                           value="msg://global"
                                                           visible="false"/>
                                                    <checkBox id="globalCheckBox"
                                                              datasource="cardDs"
                                                              property="global"
                                                              visible="false"/>
                                                </row>
                                                <row>
                                                    <label id="parentCardAccessLabel"
                                                           value="msg://parentCardAccess"/>
                                                    <checkBox id="parentCardAccess"
                                                              datasource="cardDs"
                                                              property="parentCardAccess"/>
                                                </row>
                                            </rows>
                                        </grid>
                                    </vbox>
                                </groupBox>
                                <hbox margin="true"
                                      spacing="true">
                                    <groupBox id="groupBox_shipper"
                                              caption="Грузоотправитель"
                                              spacing="true">
                                        <fieldGroup datasource="cardDs">
                                            <column>
                                                <field id="shipper"
                                                       width="250px"/>
                                                <field id="pointDeparture"
                                                       width="250px"/>
                                                <field id="contactPersonShipment"
                                                       optionsDatasource="contactPersonShipmentsDs"/>
                                                <field id="phone"
                                                       datasource="contactPersonShipmentsDs"/>
                                                <field id="desiredDateShipment"/>
                                            </column>
                                        </fieldGroup>
                                    </groupBox>
                                    <groupBox id="groupBox_consignee"
                                              caption="Грузополучатель"
                                              spacing="true">
                                        <fieldGroup datasource="cardDs">
                                            <column>
                                                <field id="consignee"/>
                                                <field id="pointDestination"
                                                       width="250px"/>
                                                <field id="contactPersonUnloading"
                                                       optionsDatasource="contactPersonUnloadingsDs"/>
                                                <field id="phone"
                                                       datasource="contactPersonUnloadingsDs"/>
                                                <field id="desiredDeliveryTime"/>
                                            </column>
                                        </fieldGroup>
                                    </groupBox>
                                </hbox>
                                <groupBox id="groupBox_tehnics"
                                          caption="Техника"
                                          width="AUTO">
                                    <grid margin="false,false,true,false"
                                          spacing="true">
                                        <columns count="12"/>
                                        <rows>
                                            <row>
                                                <fieldGroup colspan="2"
                                                            datasource="cardDs">
                                                    <column>
                                                        <field id="equipmentName"/>
                                                    </column>
                                                </fieldGroup>
                                                <label value="Б/У"/>
                                                <checkBox/>
                                                <label value="Наш транспорт"/>
                                                <checkBox id="checkBoxOur"
                                                          datasource="cardDs"
                                                          property="ourTrawl"/>
                                                <label value="Сторонний транспорт"/>
                                                <checkBox id="cardCheckBoxThird"
                                                          datasource="cardDs"
                                                          property="thirdPartyCarrier"/>
                                                <label value="Сторонний перевозчик"/>
                                                <lookupPickerField datasource="cardDs"
                                                                   optionsDatasource="contractorsDs"
                                                                   property="thirdPartyCarrierName">
                                                    <actions>
                                                        <action id="lookup"/>
                                                    </actions>
                                                </lookupPickerField>
                                            </row>
                                        </rows>
                                    </grid>
                                    <hbox margin="false,false,true,false"
                                          spacing="true">
                                        <fieldGroup datasource="tehiksDs">
                                            <column fieldCaptionWidth="143">
                                                <field id="serialNumber"
                                                       width="150px"/>
                                                <field id="comar"
                                                       width="150px"/>
                                                <field id="model"/>
                                            </column>
                                        </fieldGroup>
                                        <fieldGroup datasource="cardDs">
                                            <column fieldCaptionWidth="160"
                                                    width="50px">
                                                <field id="theNeedUseCrane"
                                                       caption="Необходимость в кране"/>
                                                <field id="numberSeats"/>
                                            </column>
                                            <column fieldCaptionWidth="155">
                                                <field id="passingCargo"
                                                       editable="false"
                                                       visible="false"
                                                       width="0px"/>
                                                <field id="transportationEquipment"
                                                       width="20px"/>
                                            </column>
                                        </fieldGroup>
                                    </hbox>
                                    <grid id="tehnicksGrid"
                                          margin="false,false,true,false"
                                          spacing="true">
                                        <columns count="4"/>
                                        <rows>
                                            <row>
                                                <fieldGroup id="endorsedFieldGroup"
                                                            datasource="tehiksDs">
                                                    <column fieldCaptionWidth="143"
                                                            width="100px">
                                                        <field id="weight"/>
                                                        <field id="length"/>
                                                        <field id="width"/>
                                                        <field id="depth"/>
                                                    </column>
                                                    <column width="100px">
                                                        <field id="weightReal"/>
                                                        <field id="lengthReal"/>
                                                        <field id="widthReal"/>
                                                        <field id="depthReal"/>
                                                    </column>
                                                </fieldGroup>
                                                <label width="8px"/>
                                                <fieldGroup id="dopDoc3fieldGroup"
                                                            border="visible"
                                                            colspan="2"
                                                            datasource="cardDs">
                                                    <column fieldCaptionWidth="161"
                                                            width="100px">
                                                        <field id="additionalCargo"
                                                               width="250px"/>
                                                        <field id="additionalWeight"
                                                               caption="Вес доп. груза"/>
                                                        <field id="additionalLoadLength"
                                                               caption="Длина доп. груза"/>
                                                        <field id="additionalLoadWidth"
                                                               caption="Ширина доп. груза"/>
                                                        <field id="additionalLoadHeight"
                                                               caption="Высота доп. груза"/>
                                                    </column>
                                                </fieldGroup>
                                            </row>
                                        </rows>
                                    </grid>
                                </groupBox>
                                <vbox id="runtimePropertiesVbox"
                                      margin="false,false,true,false"
                                      spacing="true"
                                      width="AUTO">
                                    <scrollBox height="100px"
                                               margin="true,false,true,false"
                                               scrollBars="both">
                                        <runtimeProperties id="runtimePropertiesFrameMain"
                                                           categoriesDs="categoriesDs"
                                                           fieldWidth="200px"
                                                           rows="${thesis_countOfColumnsForAdditionalFields}"
                                                           runtimeDs="runtimePropsDs"/>
                                    </scrollBox>
                                </vbox>
                                <grid id="attachmentInfo"
                                      margin="true,false,false,false"
                                      spacing="true"
                                      stylename="thesis-separator"
                                      visible="false"
                                      width="550px">
                                    <columns>
                                        <column flex="1.0"/>
                                    </columns>
                                    <rows>
                                        <row>
                                            <vbox id="attachmentBox"
                                                  height="100%"/>
                                        </row>
                                    </rows>
                                </grid>
                            </vbox>
                        </scrollBox>
                    </tab>
                    <tab id="cardProjectsTab"
                         caption="msg://cardProjectsTab">
                        <iframe id="cardProjectsFrame"
                                height="100%"
                                screen="cardProjectsFrame"/>
                    </tab>
                    <tab id="attachmentsTab"
                         caption="msg://attachmentsTab"
                         margin="true">
                        <iframe id="cardAttachmentsFrame"
                                height="100%"
                                screen="cardAttachmentsFrame"/>
                    </tab>
                    <tab id="processTab"
                         caption="msg://processTab"
                         margin="true">
                        <iframe id="cardProcFrame"
                                height="100%"
                                screen="cardProcFrame"/>
                    </tab>
                    <tab id="office"
                         caption="msg://office"
                         margin="true">
                        <iframe id="docOfficeFrame"
                                height="100%"
                                screen="docOfficeFrame"/>
                    </tab>
                    <tab id="correspondenceHistoryTab"
                         caption="msg://correspondenceHistoryTab">
                        <iframe id="correspondenceHistoryFrame"
                                height="100%"
                                screen="correspondenceHistoryFrame"/>
                    </tab>
                    <tab id="docTreeTab"
                         caption="msg://cardTreeTab">
                        <iframe id="cardTreeFrame"
                                height="100%"
                                screen="cardTreeFrame"/>
                    </tab>
                    <tab id="docTransferLogTab"
                         caption="msg://docTransferLogTab">
                        <iframe id="docTransferLogFrame"
                                height="100%"
                                screen="docTransferLogFrame"/>
                    </tab>
                    <tab id="cardLinksTab"
                         caption="msg://cardLinksTab"
                         margin="true">
                        <iframe id="cardLinksFrame"
                                height="100%"
                                screen="docLinksFrame"/>
                    </tab>
                    <tab id="cardCommentTab"
                         caption="msg://cardCommentTab">
                        <iframe id="cardCommentFrame"
                                height="100%"
                                screen="cardCommentFrame"/>
                    </tab>
                    <tab id="docLogTab"
                         caption="msg://docLogTab"
                         lazy="true">
                        <iframe id="cardLogFrame"
                                height="100%"
                                screen="cardLogFrame"/>
                    </tab>
                    <tab id="openHistoryTab"
                         caption="msg://openHistoryTab"
                         margin="true">
                        <iframe id="openHistoryFrame"
                                height="100%"
                                screen="openHistoryFrame"/>
                    </tab>
                    <tab id="versionsTab"
                         caption="msg://versionsTab"
                         margin="true">
                        <table id="versionsTable"
                               height="100%"
                               width="100%">
                            <columns>
                                <column id="createTs"
                                        caption="msg://createTs"/>
                                <column id="docKind"
                                        caption="msg://docKind"/>
                                <column id="number"
                                        caption="msg://number"/>
                                <column id="date"
                                        caption="msg://date"/>
                            </columns>
                            <rows datasource="versionsDs"/>
                        </table>
                    </tab>
                    <tab id="securityTab"
                         caption="msg://securityTab"
                         lazy="true"
                         margin="true">
                        <iframe id="securityFrame"
                                height="100%"
                                screen="securityFrame"/>
                    </tab>
                    <tab id="runtimePropertiesTab"
                         caption="msg://runtimePropsTab"
                         margin="true">
                        <scrollBox id="runtimeScrollBox"
                                   height="100%"
                                   margin="true,false,true,false"
                                   scrollBars="both">
                            <runtimeProperties id="runtimePropertiesFrameTab"
                                               categoriesDs="categoriesDs"
                                               fieldWidth="200px"
                                               rows="${thesis_countOfColumnsForAdditionalFields}"
                                               runtimeDs="runtimePropsDs"/>
                        </scrollBox>
                    </tab>
                </tabSheet>
                <vbox height="100%"
                      margin="false,false,false,true"
                      spacing="true"
                      width="220px">
                    <scrollBox id="actionsFrameScroll"
                               height="100%"
                               spacing="true">
                        <vbox id="actionsPane"
                              margin="true,true,true,false"
                              stylename="edit-area"
                              width="200px">
                            <iframe id="actionsFrame"
                                    screen="actionsFrame"/>
                        </vbox>
                        <iframe id="startProcessButtonsFrame"
                                screen="startProcessButtonsFrame"
                                width="200px"/>
                        <vbox id="otherActions"
                              margin="true,true,true,false"
                              spacing="true"
                              stylename="edit-area"
                              width="200px">
                            <popupButton id="createSubCardButton"
                                         caption="msg://actions.Create"
                                         width="100%"/>
                            <button id="createFromPatternButton"
                                    caption="msg://createFromPattern"
                                    width="100%"/>
                            <runReportPopupButton id="print"
                                                  caption="msg://print"
                                                  icon="icons/reports-print.png"
                                                  width="100%"/>
                        </vbox>
                    </scrollBox>
                </vbox>
            </hbox>
            <vbox id="resolutionsPane"
                  expand="resolutionsFrame"
                  height="100%"
                  spacing="true">
                <label value="msg://resolutions"/>
                <iframe id="resolutionsFrame"
                        screen="resolutionsFrame"/>
            </vbox>
        </split>
    </layout>
    <assign name="width"
            value="200px"/>
    <assign name="fieldCaptionWidth"
            value="140px"/>
    <assign name="fieldWidth"
            value="200px"/>
    <assign name="bigFieldWidth"
            value="550px"/>
    <assign name="commentWidth"
            value="512px"/>
    <assign name="rightPanelWidth"
            value="200px"/>
    <assign name="thesis_countOfColumnsForAdditionalFields"
            value="${thesis_countOfColumnsForAdditionalFields}"/>
</window>
